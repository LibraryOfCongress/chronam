{% load custom_filters %}<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:opensearch="http://a9.com/-/spec/opensearch/1.1/">

    <title>Chronicling America Page Search Results</title>
    <link href="{{feed_url}}" rel="self" />
    <id>{{feed_url}}</id>
    <updated>{{updated}}</updated>
    <opensearch:totalResults>{{paginator.count}}</opensearch:totalResults>
    <opensearch:startIndex>{{page.start_index}}</opensearch:startIndex>
    <opensearch:itemsPerPage>10</opensearch:itemsPerPage>
    <link rel="search" type="application/opensearchdescription+xml" href="{% url 'openoni_search_pages_opensearch' %}" />
    {% if previous_url %}<link type="application/atom+xml" rel="previous" href="http://{{host}}{% url 'openoni_search_pages_results' %}{{ previous_url }}" />{% endif %}
    {% if next_url %}<link rel="next" type="application/atom+xml" href="http://{{host}}{% url 'openoni_search_pages_results' %}{{ next_url }}" />{% endif %}

    {% for p in page.object_list %}
    <entry>
        <title>{{ p }}</title>
        <link href="http://{{host}}{{ p.url }}" />
        <id>info:lc/ndnp{{ p.url }}</id>
        <author>
            <uri>http://{{host}}{% url 'openoni_awardee' p.issue.batch.awardee.org_code %}</uri>
            <name>{{ p.issue.batch.awardee.name }}</name>
        </author>
        <updated>{{p.created|rfc3339}}</updated>
        <content type="xhtml">
            <div xmlns="http://www.w3.org/1999/xhtml">
                <img src="http://{{host}}{{ p.thumb_url }}" />
            </div>
        </content>
    </entry>
    {% endfor %}

</feed>

